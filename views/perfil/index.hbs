{{#if dados}}
  <h1>{{dados.perfil.nomeExibicao}}</h1>
  <p>{{firstLetterUpperCase dados.perfil.profissao}} na instituição {{dados.perfil.instituicao}}</p>
  <p><b>Sobre:</b> {{dados.perfil.minibio}}</p>

  {{#if favoritos}}
  <hr />
  <h3>Minha ferramentas favoritas</h3>
  <ul>
    {{#each favoritos}}
      <li><a href="{{url}}" target="_blank">{{nome}}</a></li>
    {{/each}}
  </ul>
  {{/if}}

  {{#if ferramentas}}
  <hr />
  <h3>Já sugeri as seguintes ferramentas</h3>
  <ul>
    {{#each ferramentas}}
      <li><a href="{{url}}" target="_blank">{{nome}}</a></li>
    {{/each}}
  </ul>
  {{/if}}

{{#else}}
  <p>Não há nenhum perfil para ser exibido.</p>
{{/else}}
{{/if}}